<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".UserResult">

    <!-- Header with Red Accent -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:strokeColor="@color/red"
        app:strokeWidth="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="@color/card_blue_bg">

            <ImageView
                android:id="@+id/btnBackToMain"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="@color/red" />

            <TextView
                android:id="@+id/tvEligibleCoursesTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Eligible Courses"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/navyBlue"
                android:gravity="center"
                android:layout_marginStart="16dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- List Container with Blue Theme -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:strokeColor="@color/border_blue"
        app:strokeWidth="1dp">

        <ListView
            android:id="@+id/lvUserEligibleCourses"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:background="@color/card_blue_bg"
            android:divider="@color/mediumBlue"
            android:dividerHeight="1dp" />

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>